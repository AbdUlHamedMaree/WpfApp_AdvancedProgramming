<Window x:Class="WpfApp_D_NrimanProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_D_NrimanProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="180" Width="400" ResizeMode="CanMinimize">

    <StackPanel Margin="10">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="UserName_TextBox" Grid.Column="0" TextBlock.FontSize="14"/>
            <TextBlock Text=":اسم المستخدم" Grid.Column="1" HorizontalAlignment="Center" FontSize="14"/>
        </Grid>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="Password_TextBox" Grid.Column="0" TextBlock.FontSize="14"/>
            <TextBlock Text=":كلمة السر" Grid.Column="1" HorizontalAlignment="Center" FontSize="14"/>
        </Grid>
        <Button Click="Button_Click" Content="تسجيل الدخول" FontSize="14" Margin="10"/>
    </StackPanel>
</Window>
